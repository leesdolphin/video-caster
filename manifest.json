{
  "manifest_version": 2,

  "name": "KissAnime and KissCartoon Caster",
  "description": "Automatically plays KissCartoon and KissAnime shows on your Google ChromeCast.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://*/",
    "http://kisscartoon.me/",
    "http://kisscartoon.se/"
  ],
  "content_security_policy": "script-src 'self' https://www.gstatic.com; object-src 'self'"
}
